<UserControl x:Class="EventManagementSystem.UI.Views.EventManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:EventManagementSystem.UI.ViewModels">
    <UserControl.DataContext>
        <vm:MainViewModel />
    </UserControl.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:Card Background="{DynamicResource MaterialDesignPaper}" Padding="10">
            <TextBlock Text="Event Management" Style="{StaticResource MaterialDesignHeadline5TextBlock}" />
        </materialDesign:Card>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <materialDesign:Card>
                <StackPanel>
                    <TextBlock Text="Events List" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="10" />
                    <ListView ItemsSource="{Binding Events}" Height="400">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="150" />
                                <GridViewColumn Header="Date" DisplayMemberBinding="{Binding StartDate, StringFormat={}{0:dd/MM/yyyy}}" Width="100" />
                                <GridViewColumn Header="Location" DisplayMemberBinding="{Binding Location}" Width="150" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>