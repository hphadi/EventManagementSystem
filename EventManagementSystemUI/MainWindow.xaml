<Window x:Class="EventManagementSystemUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:EventManagementSystemUI.ViewModels"
        xmlns:local="clr-namespace:EventManagementSystemUI.Views"
        Title="Event Management System" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="28*" />
            <ColumnDefinition Width="47*"/>
        </Grid.ColumnDefinitions>
        <!-- Sidebar -->
        <materialDesign:Card Grid.Column="0" Background="{DynamicResource MaterialDesignPaper}">
            <StackPanel Margin="10">
                <Button Content="Dashboard" Command="{Binding NavigateCommand}" CommandParameter="Dashboard" Margin="5" />
                <Button Content="Events" Command="{Binding NavigateCommand}" CommandParameter="Events" Margin="5" />
               
                <Button Content="Groups" Command="{Binding NavigateCommand}" CommandParameter="Groups" Margin="5" />
                <Button Content="Profile" Command="{Binding NavigateCommand}" CommandParameter="Profile" Margin="5" />
                <Button Content="New Event" Command="{Binding NavigateCommand}" CommandParameter="NewEvent" Visibility= "{Binding NewEventButtonVisibility}"
                        Margin="5" Padding="10,5" Style="{DynamicResource MaterialDesignRaisedButton}"
                        Background="#FFF32B21" Foreground="White" 
                        ToolTip="Currently viewing New Event page" 
                        materialDesign:ButtonProgressAssist.IsIndeterminate="True" BorderBrush="#FFF32B21">
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                    To="#FFF32B21" Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Button.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                    To="#FFF32B21" Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>


                </Button>
                <Button Content="Register" Command="{Binding NavigateCommand}" CommandParameter="Register" Margin="5" Visibility= "{Binding RegisterButtonVisibility}"/>
                <Button Content="Sign In" Command="{Binding NavigateCommand}" CommandParameter="SignIn" Margin="5" Visibility= "{Binding SignInButtonVisibility}"/>
                <Button Content="Sign Out" Command="{Binding SignOutCommand}" Margin="5" Visibility= "{Binding SignOutButtonVisibility}"/>
            </StackPanel>
        </materialDesign:Card>
        <!-- Main Content -->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2" />
    </Grid>
</Window>