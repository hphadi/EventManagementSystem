<UserControl x:Class="EventManagementSystemUI.Views.GroupManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Manage Groups" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Margin="10" 
                       materialDesign:ElevationAssist.Elevation="Dp2"/>
            <ListView Height="400" ItemsSource="{Binding Groups}" SelectedItem="{Binding SelectedGroup, Mode=TwoWay}" MouseDoubleClick="ListView_MouseDoubleClick"
                      >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150" />
                        <GridViewColumn Header="City" DisplayMemberBinding="{Binding City}" Width="150" />
                        <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="200" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>